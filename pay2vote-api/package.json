{
	"name": "pay2vote-api",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"lint": "npx eslint ./src",
		"lint:fix": "npm run lint -- --fix",
		"prettier": "npx prettier ./src --check",
		"prettier:fix": "npm run prettier -- --write",
		"format": "npm run prettier:fix && npm run lint:fix",
		"test": "vitest",
		"test:unit:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"clean": "rimraf dist/",
		"copy-files": "copyfiles .env.production dist/",
		"build": "npm run clean && tsc && tsc-alias && npm run copy-files",
		"start": "cross-env NODE_ENV=production node dist/server.js",
		"dev1": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
		"dev": "cross-env NODE_ENV=development nodemon -q server.ts",
		"dev:prod": "cross-env NODE_ENV=production nodemon -q server.ts",
		"schedule": "cross-env NODE_ENV=development npx ts-node src/services/ScheduleService.ts",
		"deploy": "npm run build && npm run pm2:start && pm2 monit",
		"redeploy": "pm2 delete pm2.config.js && npm run deploy",
		"pm2:start": "cross-env NODE_ENV=production pm2 start pm2.config.js",
		"pm2:stop": "pm2 stop pm2.config.js",
		"pm2:delete": "pm2 delete pm2.config.js",
		"pm2:restart": "pm2 restart pm2.config.js",
		"schedule:pm2:start": "cross-env NODE_ENV=production pm2 start pm2.schedule.config.js && pm2 monit",
		"schedule:pm2:stop": "pm2 stop pm2.schedule.config.js",
		"schedule:pm2:delete": "pm2 delete pm2.schedule.config.js",
		"schedule:pm2:restart": "pm2 restart pm2.schedule.config.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^5.0.0",
		"@types/http-errors": "^2.0.1",
		"@types/multer": "^1.4.7",
		"axios": "^1.4.0",
		"bcrypt": "^5.1.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"find-config": "^1.0.0",
		"http-errors": "^2.0.0",
		"jsonwebtoken": "^9.0.0",
		"multer": "^1.4.5-lts.1",
		"mysql2": "^3.4.0",
		"node-cron": "^3.0.2",
		"pino": "^8.14.1",
		"pino-pretty": "^10.0.1",
		"socket.io": "^4.7.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^20.4.0",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitest/ui": "^0.33.0",
		"concurrently": "^8.2.0",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^5.0.0",
		"jsdom": "^22.1.0",
		"nodemon": "^2.0.22",
		"prettier": "^3.0.0",
		"prisma": "^5.0.0",
		"rimraf": "^5.0.1",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.7",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.6",
		"vitest": "^0.33.0",
		"vitest-mock-extended": "^1.1.4"
	}
}
