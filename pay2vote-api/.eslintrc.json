{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"tabWidth": 4,
				"endOfLine": "auto",
				"useTabs": true,
				"singleQuote": true,
				"useTab": true,
				"printWidth": 120
			}
		],
		"indent": [
			"error",
			"tab"
		],

		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"@typescript-eslint/no-var-requires": "off",
		"@typescript-eslint/no-explicit-any": "off"
	}
}